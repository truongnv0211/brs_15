- form_id = "book_#{@book.id}_rating"
= form_for review, html: {class: "star_rating_form", multipart: true} do |f|
  = f.hidden_field :book_id, value: @book.id
  = f.hidden_field :user_id, value: current_user.id
  = f.hidden_field :rating, id: "#{form_id}", value: 0
  = f.label :rating
  %br/
  - (1..5).each do |i|
    %li.rating_star{"data-form-id" => form_id, "data-rating" => i, :id => "#{form_id}_#{i}"}
  %br/
  = f.label :subject
  = f.text_field :subject, class: "form-control"
  = f.label :content
  = f.text_area :content, class: "form-control"
  %br/
  = f.submit t("book.create-review"), class: "btn btn-primary pull-right"
%br/
%br/
