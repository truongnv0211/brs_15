%ul.nav.nav-pills
  %li{:class => "#{!params[:favorite].present? ? "active" : ""}", :role => "presentation"}
    %a{:href => books_path} All Books
  %li{:class => "#{params[:favorite].present? ? "active" : ""}", :role => "presentation"}
    %a{:href => "#{books_path({favorite: true})}"}= t "books.favorite"
.well
  = search_form_for @search do |f|
    .container-fluid
      .navbar-header
        = f.label :category_id
        = f.select :category_id_eq,                                    |
          options_from_collection_for_select(@categories, :id, :name), |
          {}, class: "form-control"                                    |
      .navbar-header
        = f.label :title
        = f.search_field :title_cont, class: "form-control"
      .navbar-header
        = f.label :rate
        = f.select :rate, options_for_select(%w(All 1 2 3 4 5)), {} ,class: "form-control"
      .navbar-header
        = f.label :action
        %br/
        = f.submit t("books.submit"), class: "btn btn-default button-width"
