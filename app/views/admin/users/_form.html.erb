<%= form_for [:admin, @user] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %><br>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %><br>

  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %><br>

  <%= f.submit t("feature.submit"), class: "btn btn-primary form-control" %>
<% end %>
