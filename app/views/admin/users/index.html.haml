= link_to t("admin-user.new-user"), new_admin_user_path
%hr/
%h1= t "user.list-user"
.row
  .col-md-12
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th= t "admin-user.id"
          %th= t "admin-user.name"
          %th= t "admin-user.email"
          %th= t "admin-user.created_at"
          %th= t "admin-user.book-favorite"
          %th= t "admin-user.book-read"
          %th= t "admin-user.total-review"
          %th= t "admin-user.total-comment"
          %th{:colspan => "3"}
      %tbody
        = render @users
    = will_paginate @users
