.row
  .col-md-4
  .col-md-4
    = form_for [:admin, @book], html: {multipart: true} do |f|
      = render "shared/error", object: f.object
      .field
        = f.label :title
        %br/
        = f.text_field :title, class: "form-control"
        %br/
      .field
        = f.label :category_id
        %br/
        = f.select(:category_id, Category.pluck(:name, :id), {}, {class: "form-control"})
        %br/
      .field
        = f.label :publish_date
        %br/
        = f.text_field :publish_date, class: "form-control"
        %br/
      .field
        = f.label :author
        %br/
        = f.text_field :author, class: "form-control"
        %br/
      .field
        = f.label :number_page
        %br/
        = f.number_field :number_page, class: "form-control"
        %br/
      .field
        = f.label :rate
        %br/
        = f.select(:rate, (0..Settings.admin.books.max_rate).to_a, {}, {class: "form-control"})
        %br/
      .field
        = f.label :content
        %br/
        = f.text_area :content, class: "form-control"
        %br/
      %span.picture
        = f.file_field :picture
        %br/
      .actions
        = f.submit t("admin.submit"), class: "btn btn-primary btn-block"
